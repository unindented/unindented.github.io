{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "yarn",
      "args": ["test:debug", "${file}"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Tests",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "yarn",
      "args": ["test:debug"]
    }
  ]
}
